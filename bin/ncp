#!/usr/bin/env node




var ncp = require('../lib/ncp'),
    args = process.argv.slice(2),
    source, dest;

if (args.length < 2) {
  console.error('Usage: ncp [source] [destination] [concurrency limit]');
  process.exit(1);
}

if (args[2]) {
  ncp.limit = Number(args[2]);
}

ncp.ncp(args[0], args[1], function (err) {
  if (err) {
    console.error('There was an error:');
    console.error(err.message);
    process.exit(1);
  }
  console.log('done.');
});


